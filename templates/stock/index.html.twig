{% extends 'base.html.twig' %}

{% block title %}Stock index{% endblock %}

{% block body %}

<div class="containerStock">
    <h1>Gestion des stocks produits</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id Stock</th>
                <th>Produit</th>
                <th>QuantitySold</th>
                <th>QuantityPrepared</th>
                <th>QuantityReal</th>
                <th>actions</th>
                 
            </tr>
        </thead>
        <tbody>
        {% for stock in stocks %}
            <tr>
                <td>{{ stock.id }}</td>
                
                <td>
                     {% if stock.product %}
                    {{ stock.product.getNameProduct() }}
                    {% endif %} 
                    
                </td>
                {# <td>{{ stock.product}}</td> #}
                <td>{{ stock.quantitySold }}</td>
                <td>{{ stock.quantityPrepared }}</td>
                <td>{{ stock.quantityReal }}</td>
                 
                <td>
                    <a href="{{ path('app_stock_show', {'id': stock.id}) }}">show</a>
                    <a href="{{ path('app_stock_edit', {'id': stock.id}) }}">edit</a>
                </td>
                
                
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_stock_new') }}">Create new</a>

</div>
{% endblock %}
