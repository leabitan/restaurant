{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

<div class="userContainer">
    <h1>Gestion des utilisateurs</h1>


    <button type="button" class="btn btn-success buttonUserAdd"><a href="{{ path('app_user_new') }}">Create new</a></button>

   <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Email</th>
                <th scope="col">Roles</th>
                {# <th scope="col">Password</th> #}
                {# <th scope="col">InscriptionDate</th> #}
                <th scope="col">Matricule</th>
                <th scope="col">Firstname</th>
                <th scope="col">Lastname</th>
                {# <th scope="col">ActiveUser</th>
                <th scope="col">Phone</th>
                <th scope="col">Street</th>
                <th scope="col">PostalCode</th> #}
                <th scope="col">actions</th>
            </tr>

        </thead>
        <tbody>

        {% for user in users %}
            <tr class="table-secondary">
                <th scope="row">{{ user.id }}</th>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                {# <td>{{ user.password }}</td>
                <td>{{ user.inscriptionDate ? user.inscriptionDate|date('Y-m-d H:i:s') : '' }}</td> #}
                <td>{{ user.matricule }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                {# <td>{{ user.activeUser ? 'Yes' : 'No' }}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.street }}</td>
                <td>{{ user.postalCode }}</td> #}
                <td>

                <button type="button" class="btn btn-secondary buttonUser"> <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a></button>
                <button type="button" class="btn btn-secondary buttonUser"><a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a></button>
                   
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


</div>
{% endblock %}
