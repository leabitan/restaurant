{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

<div class="userContainer" style="margin-right:2vw; margin-left:2vw; margin-top: 15vh;margin-bottom: 15vh;">
    <h1 class="mb- text-center">Gestion des utilisateurs</h1>
    <button type="button" class="btn buttonUserAd" style="background-color: #ffd500; border:none;"><a style="text-decoration: none; color:black;" href="{{ path('app_user_new') }}">Créer un utilisateur</a></button>

   <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Email</th>
                <th scope="col">Roles</th>
                {# <th scope="col">Password</th> #}
                {# <th scope="col">InscriptionDate</th> #}
                <th scope="col">Matricule</th>
                <th scope="col">Firstname</th>
                <th scope="col">Lastname</th>
                {# <th scope="col">ActiveUser</th>
                <th scope="col">Phone</th>
                <th scope="col">Street</th>
                <th scope="col">PostalCode</th> #}
                <th scope="col">actions</th>
            </tr>

        </thead
        <tbody>

        {% for user in users %}
            <tr class="table-dark">
                <th scope="row">{{ user.id }}</th>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                {# <td>{{ user.password }}</td>
                <td>{{ user.inscriptionDate ? user.inscriptionDate|date('Y-m-d H:i:s') : '' }}</td> #}
                <td>{{ user.matricule }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                {# <td>{{ user.activeUser ? 'Yes' : 'No' }}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.street }}</td>
                <td>{{ user.postalCode }}</td> #}
                <td>
                    <a style="color: #ffffff;#ffd500;font-style: italic;font-weight: bold;" href="{{ path('app_user_show', {'id': user.id}) }}">Détails</a>
                    <a style="color: #ffffff;#ffd500;font-style: italic;font-weight: bold;" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


</div>
{% endblock %}
