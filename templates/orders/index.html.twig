{% extends 'base.html.twig' %}

{% block title %}Récapitulatif commande{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container" style="margin-top: 15vh;margin-bottom: 30vh;">
<h1 class="mb-5 text-center">Récapitulatif de la commande</h1>


 <table class="table">
        <thead>
            <tr>
                {# <th scope="col">Date</th> #}
                <th scope="col">Produits</th>
                <th scope="col">Quantité</th>
                <th scope="col">prix</th>
            </tr>
        </thead>

        <tbody>
{% for orderDetail in orderDetails %}
    <tr class="table-dark">
        {# <td>{{ orderDetail.getCreatedAt() ? orderDetail.getCreatedAt()|date('Y-m-d') : '' }}</td> #}
        <td>{{ orderDetail.productName }}</td>
        <td>{{ orderDetail.quantity }}</td> <!-- Accès à la quantité -->
        <td>{{ orderDetail.price }}€</td>
    </tr>
{% else %}
    <tr>
        <td colspan="4">Il n'y a pas de produits</td>
    </tr>
{% endfor %}
        </tbody>
    </table>
<p>Total Quantité: {{ totalQuantity }}</p> <!-- Affichage de la somme des quantités -->
<p>Total Prix: {{ totalPrice }}€</p> <!-- Affichage de la somme des prix -->
</div>
{% endblock %}
