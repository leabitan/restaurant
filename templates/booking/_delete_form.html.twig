<form method="post" action="{{ path('app_booking_delete', {'id': booking.id}) }}" onsubmit="return confirm('Etes-vous sûr de vouloir supprimer cette réservation ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ booking.id) }}">
    <button class="btn btn-primary mt-3" style="background-color: #000000; color: #ffffff; border:none;">Supprimer</button>
</form>
