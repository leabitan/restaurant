{% extends 'base.html.twig' %}

{% block title %}Edit Booking{% endblock %}

{% block body %}
    {# <h1>Edit Booking</h1>

    {{ include('booking/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('app_booking_index') }}">back to list</a>

    {{ include('booking/_delete_form.html.twig') }} #}



    <style>


		body {
	
   		background: url('/images/fondFruitsClair.png') no-repeat center center fixed;
    	background-size: cover;
    	background-color: rgba(240, 240, 240, 0.2); /* Couleur de fond avec une transparence à 80% */
		}

    </style>


<script>
    $(document).ready(function() {
        // you may need to change this code if you are not using Bootstrap Datepicker
        $('.js-datepicker').datepicker({
            format: 'yyyy-mm-dd'
        });
    });
</script>
<div class="containerBooking">
    <div class="container">
        <h1 class="mt-4">Editer une réservation</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'form'}}) }}

        <div class="form-group row">
            <label for="dateBooking" class="col-sm-2 col-form-label labelBooking">Date</label>
            <div class="col-sm-10">
                {{ form_widget(form.date_booking, {'attr': {'class': 'form-control'}}) }}
                <div class="form-error">
                    {{ form_errors(form.date_booking) }}
                </div>
            </div>
        </div>


        <div class="form-group row">
            <label for="dinerBooking" class="col-sm-2 col-form-label labelBooking">Dîner ou Déjeuner</label>
            <div class="col-sm-10">
                {{ form_widget(form.diner, {'attr': {'class': 'form-control'}}) }}
                <div class="form-error">
                    {{ form_errors(form.diner) }}
                </div>
            </div>
        </div>


        <div class="form-group row">
            <label for="hourBooking" class="col-sm-2 col-form-label labelBooking">Horaires</label>
            <div class="col-sm-10">
                {{ form_widget(form.hour_booking, {'attr': {'class': 'form-control'}}) }}
                <div class="form-error">
                    {{ form_errors(form.hour_booking) }}
                </div>
            </div>
        </div>


        <div class="form-group row">
            <label for="NameBooking" class="col-sm-2 col-form-label labelBooking">Nom de la réservation</label>
            <div class="col-sm-10">
                {{ form_widget(form.name_booking, {'attr': {'class': 'form-control'}}) }}
                <div class="form-error">
                    {{ form_errors(form.name_booking) }}
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label for="telBooking" class="col-sm-2 col-form-label labelBooking">Téléphone</label>
            <div class="col-sm-10">
                {{ form_widget(form.phone_booking, {'attr': {'class': 'form-control'}}) }}
                <div class="form-error">
                    {{ form_errors(form.phone_booking) }}
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label for="emailBooking" class="col-sm-2 col-form-label labelBooking">Email</label>
            <div class="col-sm-10">
                {{ form_widget(form.email_booking, {'attr': {'class': 'form-control'}}) }}
                <div class="form-error">
                    {{ form_errors(form.email_booking) }}
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label for="peopleNumber" class="col-sm-2 col-form-label labelBooking">Nombre de couverts</label>
            <div class="col-sm-10">
                {{ form_widget(form.peopleNumber, {'attr': {'class': 'form-control'}}) }}
                <div class="form-error">
                    {{ form_errors(form.peopleNumber) }}
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label for="commentsBooking" class="col-sm-2 col-form-label labelBooking">Commentaires</label>
            <div class="col-sm-10">
                {{ form_widget(form.comments, {'attr': {'class': 'form-control'}}) }}
                <div class="form-error">
                    {{ form_errors(form.comments) }}
                </div>
            </div>
        </div>


<div class="form-group row">
    <label for="bookingConfirmed" class="col-sm-2 col-form-label labelBooking"></label>
    <div class="col-sm-10">
        {{ form_widget(form.bookingConfirmed, {'attr': {'class': 'form-check-input'}}) }}
        {{ form_label(form.bookingConfirmed, null, {'label_attr': {'class': 'form-check-label'}}) }}
        <div class="form-error">
            {{ form_errors(form.bookingConfirmed) }}
        </div>
    </div>
</div>




        <div class="buttonBookingClass">
            <button class="btn btn-primary  buttonBooking">{{ button_label|default('Save') }}</button>
        </div>

        {{ form_end(form) }}


    </div>
</div>
{% endblock %}
