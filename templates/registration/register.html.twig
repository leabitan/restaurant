{% extends 'base.html.twig' %}

{% block title %}Création de compte{% endblock %}

{% block body %}

	<style>


		body {
	
   		background: url('/images/fondFruitsClair.png') no-repeat center center fixed;
    	background-size: cover;
    	background-color: rgba(240, 240, 240, 0.2); /* Couleur de fond avec une transparence à 80% */
		}

    </style>

  <div class="containerRegister">
        <div class="row justify-content-center">
            <div class="col-md-6 login-box">
                <h2>Inscription</h2>

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                    {{ message }}
                    </div>
                {% endfor %}

                {# {{ form_errors(registrationForm) }} #}
                {% for error in registrationForm.email.vars.errors %}
                <div class="alert alert-danger">{{ error.message }}</div>
                {% endfor %}

                {{ form_start(registrationForm) }}

                    <div class="form-group user-box">
                        {{ form_row(registrationForm.firstname,  {'label': false,'attr': {'placeholder': 'Prénom'}}) }}
                    </div>

                    <div class="form-group user-box">
                    {{ form_row(registrationForm.lastname,  {'label': false,'attr': {'placeholder': 'Nom'}}) }}
                    </div>

                    <div class="form-group user-box">
                        {{ form_row(registrationForm.email,  {'label': false,'attr': {'placeholder': 'Adresse mail'}}) }}
                    </div>


                    <div class="form-group user-box">
                    {{ form_row(registrationForm.plainPassword,  {'label': false,'attr': {'placeholder': 'Mot de passe'}}) }}
                    </div>

                    {{ form_row(registrationForm.agreeTerms) }}

                    
                    <a href="#"><span></span><span></span><span></span><span></span><button class="login_button" type="submit" class="btn-primary">Valider</button></a>

                {{ form_end(registrationForm) }}
    
            </div>
        </div>
    </div>

{% endblock %}



